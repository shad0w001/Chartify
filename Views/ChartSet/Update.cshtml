@model Chartify.ViewModels.ChartSetViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="card bg-dark mb-0 mx-auto" style="width: 60rem;">
    <div class="card-header">
        <h2>Update Chartset Information</h2>
    </div>
    <form method="post" asp-action="UploadCover" enctype="multipart/form-data" runat="server" class="mb-4 col">
        <div class="form-group">
            <div class="form-group m-3">
                <label for="formFile" asp-for="CoverPath" class="form-label">Update the Cover Image:</label>
                <input asp-for="CoverPath" class="form-control bg-dark text-white" type="file" name="file" id="formFile">
            </div>

            <div class="col">
                <input type="submit" class="btn btn-info" asp-action="UploadCover" asp-controller="ChartSet" asp-route-id="@Model.Id" value="Update" />
            </div>
        </div>
    </form>
    <form method="post" asp-action="Update" enctype="multipart/form-data" runat="server">
        <div class="container">
            <div class="form-group m-3">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control bg-dark text-white" placeholder="Song Title">
            </div>
            <div class="form-group m-3">
                <label asp-for="Artist">Artist</label>
                <input asp-for="Artist" type="text" class="form-control bg-dark text-white" placeholder="Artist">
            </div>
            <div class="form-group m-3">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" type="text" class="form-control bg-dark text-white" placeholder="Description"></textarea>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Duration">Time Duration (in seconds)</label>
                <input asp-for="Duration" type="number" min="0" class="form-control bg-dark text-white" placeholder="@Model.Duration.TotalSeconds" placeholder="0" required>
            </div>
            <div class="form-group m-3">
                <label asp-for="BPM">Beats Per Minute</label>
                <input asp-for="BPM" class="form-control bg-dark text-white" placeholder="00.00">
            </div>
        </div>

        <div class="form-group row m-3">
            <div class="card-body text-center text-light">
                <input type="submit" class="btn btn-outline-info col m-3" asp-action="Update" asp-controller="ChartSet" value="Update" />
                <a asp-action="Index" class="btn btn-outline-danger col m-3">Go Back</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}