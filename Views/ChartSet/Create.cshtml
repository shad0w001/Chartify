@model Chartify.ViewModels.ChartSetViewModel

<form method="post" asp-action="Create" enctype="multipart/form-data" runat="server">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <p><label asp-for="Title">Title:</label></p>
                            <input asp-for="Title" class="form-control" />

                            <p><label asp-for="Artist">Artist:</label></p>
                            <input asp-for="Artist" class="form-control" />

                            <p><label class="form-label">Upload a Cover Image:</label></p>
                            <input type="file" name="file" class="form-control" />

                            <p><label asp-for="Description">Description:</label></p>
                            <input asp-for="Description" class="form-control" />
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-50" asp-action="Create" asp-controller="ChartSet" value="Create a Chart Set" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-50">Back</a>
            </div>
        </div>
    </div>
</form>