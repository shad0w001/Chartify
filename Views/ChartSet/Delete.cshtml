@model Chartify.ViewModels.ChartSetViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="card bg-dark mb-0 mx-auto text-center" style="width: 60rem;">
    <form method="post" asp-controller="ChartSet" asp-action="Delete" asp-route-id="@Model.Id">
        <h1>Are you sure you want to delete this chartset?</h1>
        <h2>@Model.Title - @Model.Artist made by @Model.Creator.UserName</h2>

        @if (Model.Charts.Count > 0)
        {
            <h3>The following charts will be deleted alongside the chartset</h3>
            @foreach (var chart in Model.Charts)
            {
                <a asp-action="Details" asp-controller="Chart" asp-route-id="@chart.Id"><i class="bi bi-star-fill"></i>@chart.DifficultyRating - @chart.DifficultyName</a>
                <p></p>
            }
        }
        else
        {
            <h3>This chartset has no charts, therfore none will be deleted alongside it.</h3>
        }

        <div class="form-group row m-3">
            <div class="card-body text-center text-light">
                <input type="submit" class="btn btn-outline-danger col m-3" asp-action="delete" asp-controller="ChartSet" value="Yes, I am sure" />
                <a asp-action="Index" class="btn btn-outline-info col m-3">Nooo, go back.</a>
            </div>
        </div>
    </form>
</div>