@model Chartify.ViewModels.ChartViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Game</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Update" enctype="multipart/form-data" runat="server">
            <div class="container">
                <div class="col-md-12 col-lg-12">
                    <article class="post vt-post">
                        <div class="row">
                            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                                <div class="caption">
                                    <p><label for="ChartSetId" class="form-label">ChartSet:</label></p>
                                    <select type="text" class="form-control" asp-for="ChartSetId" asp-items="ViewBag.ChartSets"></select>

                                    <p><label asp-for="DifficultyName">Difficulty Name:</label></p>
                                    <input asp-for="DifficultyName" class="form-control" />

                                    <p><label asp-for="DifficultyRating">Difficulty Rating:</label></p>
                                    <input asp-for="DifficultyRating" class="form-control" />

                                    <p><label asp-for="Duration">Time Duration:</label></p>
                                    <input asp-for="Duration" class="form-control" />

                                    <p><label asp-for="ObjectCount">Object Count:</label></p>
                                    <input asp-for="ObjectCount" class="form-control" />

                                    <p><label class="form-label" asp-for="FilePath">Upload the Difficulty File:</label></p>
                                    <input asp-for="ObjectCount" type="file" name="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info" asp-action="Update" asp-controller="Chart" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-100">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}