@model Chartify.ViewModels.ChartViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="card bg-dark mb-0 mx-auto" style="width: 60rem;">
    <div class="card-header">
        <h2>Update Chart Information</h2>
    </div>
    <form method="post" asp-action="UploadCover" enctype="multipart/form-data" runat="server" class="mb-4 col">
        <div class="form-group">
            <div class="form-group m-3">
                <label for="formFile" asp-for="FilePath" class="form-label">Upload a new File</label>
                <input asp-for="FilePath" class="form-control bg-dark text-white" type="file" name="file" id="formFile">
            </div>

            <div class="col">
                <input type="submit" class="btn btn-info" asp-action="UploadFile" asp-controller="Chart" asp-route-id="@Model.Id" value="Update" />
            </div>
        </div>
    </form>
    <form method="post" asp-action="Update" enctype="multipart/form-data" runat="server">
        <div class="container">
            <div class="form-group m-3">
                <label asp-for="ChartSetId">Title</label>
                <select asp-for="ChartSetId" type="text" class="form-control bg-dark text-white" placeholder="ChartSet" asp-items="ViewBag.ChartSets"></select>
            </div>
            <div class="form-group m-3">
                <label asp-for="DifficultyName">Name</label>
                <input asp-for="DifficultyName" type="text" class="form-control bg-dark text-white" placeholder="Name">
            </div>
            <div class="form-group m-3">
                <label asp-for="DifficultyRating">Star Rating</label>
                <input asp-for="DifficultyRating" class="form-control bg-dark text-white" placeholder="0.00">
            </div>
            <div class="form-group m-3">
                <label asp-for="ObjectCount">Number of Objects</label>
                <input asp-for="ObjectCount" class="form-control bg-dark text-white" placeholder="0">
            </div>
        </div>

        <div class="form-group row m-3">
            <div class="card-body text-center text-light">
                <input type="submit" class="btn btn-outline-info col m-3" asp-action="Update" asp-controller="Chart" value="Update" />
                <a asp-action="Index" class="btn btn-outline-danger col m-3">Go Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}