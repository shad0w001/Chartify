@model Chartify.ViewModels.ChartViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card bg-dark mb-0 mx-auto text-center" style="width: 60rem;">
    <form method="post" asp-controller="Chart" asp-action="Delete" asp-route-id="@Model.Id">
        <h1>Are you sure you want to delete this chart?</h1>
        <h2><i class="bi bi-star-fill"></i>@Model.DifficultyRating - @Model.DifficultyName, from @Model.ChartSet.Title - @Model.ChartSet.Artist</h2>
        <div class="form-group row m-3">
            <div class="card-body text-center text-light">
                <input type="submit" class="btn btn-outline-danger col m-3" asp-action="Delete" asp-controller="Chart" value="Yes, I am sure" />
                <a asp-action="Index" class="btn btn-outline-info col m-3">Nooo, go back.</a>
            </div>
        </div>
    </form>
</div>