@model Chartify.ViewModels.ChartViewModel

<form method="post" asp-action="Create">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <p><label asp-for="DifficultyName">Name:</label></p>
                            <input asp-for="DifficultyName" class="form-control" />

                            <p><label asp-for="DifficultyRating">Star Rating:</label></p>
                            <input asp-for="DifficultyRating" class="form-control" />

                            <p><label asp-for="Duration">Duration:</label></p>
                            <input asp-for="Duration" class="form-control" />
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-50" asp-action="Create" asp-controller="Chart" value="Create a Chart Set" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-50">Back</a>
            </div>
        </div>
    </div>
</form>